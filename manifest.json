
{
  "name": "Tab Limit",
  "description": "Limit the Tabs your can open, preserve your focus",
  "version": "1.2",
  "background": { "scripts": ["background.js"] },

  "browser_action": {
      "name": "Set the Max tabs in your browser",
      "default_icon" : "images/16x16.png",
      "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],

  "manifest_version": 2,

  "icons": 
  { 
  	"16": "images/16x16.png",
    "32": "images/32x32.png",            
    "128": "images/64x64.png" 
  }


}
